<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fitsSystemWindows="true">

        <ImageView
            android:id="@+id/iv_top"
            android:layout_width="@dimen/dp_194"
            android:layout_height="@dimen/dp_148"
            android:layout_marginTop="@dimen/dp_60"
            android:src="@mipmap/logo_register"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_account"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginLeft="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_60"
            android:layout_marginRight="@dimen/dp_35"
            android:background="@drawable/edit_login_bg"
            android:hint="请输入您的账号"
            android:paddingLeft="@dimen/dp_15"
            android:singleLine="true"
            android:textColor="@color/black22"
            android:textColorHint="@color/b2"
            android:textSize="@dimen/sp_16"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_top" />

        <TextView
            android:id="@+id/tv_next"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_42"
            android:layout_marginTop="@dimen/dp_30"
            android:background="@drawable/tv_next_bg"
            android:gravity="center"
            android:text="下一步"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18"
            app:layout_constraintLeft_toLeftOf="@+id/et_account"
            app:layout_constraintRight_toRightOf="@+id/et_account"
            app:layout_constraintTop_toBottomOf="@+id/et_account" />

        <CheckedTextView
            android:id="@+id/ck_agree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:drawableLeft="@drawable/ck_textview"
            android:drawablePadding="@dimen/dp_10"
            android:text="登录代表已阅读并同意"
            android:textColor="@color/colorGray6"
            android:textSize="@dimen/sp_14"
            app:layout_constraintLeft_toLeftOf="@+id/et_account"
            app:layout_constraintTop_toBottomOf="@+id/tv_next" />

        <TextView
            android:id="@+id/tv_screat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《隐私协议》"
            android:textColor="@color/colorBlue"
            android:textSize="@dimen/sp_14"
            app:layout_constraintLeft_toRightOf="@+id/ck_agree"
            app:layout_constraintTop_toTopOf="@+id/ck_agree" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
